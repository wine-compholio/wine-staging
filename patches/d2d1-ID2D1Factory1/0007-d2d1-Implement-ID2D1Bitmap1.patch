+HRESULT d2d_bitmap_create_shared_from_dxgi_surface(ID2D1Factory *factory,
+        IDXGISurface *surface, const D2D1_BITMAP_PROPERTIES1 *requested_properties,
+        ID3D10Device *target_device, struct d2d_bitmap **bitmap)
