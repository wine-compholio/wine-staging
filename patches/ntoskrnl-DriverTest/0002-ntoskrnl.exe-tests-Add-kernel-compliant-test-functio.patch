+static inline const char* kernel_strrchr(const char *str, int character)
+{
+    const char *ret = NULL;
+    for (; *str; str++)
+    {
+        if (*str == character)
+            ret = str;
+    }
+    return ret;
+}
+
+static inline void* kernel_memcpy(void *destination, const void *source, size_t num)
+{
+    const char *src = source;
+    char *dst = destination;
+    while (num--) *dst++ = *src++;
+    return destination;
+}
