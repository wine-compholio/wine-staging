+static HRESULT range_Collapse(LONG bStart, LONG *start, LONG *end)
+{
+  BOOL isdege = !(*end - *start);
+
+  if (isdege)
+      return S_FALSE;
+
+  if (bStart == tomEnd || bStart == tomFalse)
+      *start = *end;
+  else
+      *end = *start;
+  return S_OK;
+}
 
