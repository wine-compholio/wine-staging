+struct kernel_test_state
+{
+    struct
+    {
+        int debug_level;
+        int report_success;
+        BOOL windows;
+    } input;
+    struct
+    {
+        const char *file;
+        int line;
+        int todo_level;
+        int todo_do_loop;
+    } temp;
+    struct
+    {
+        LONG failures;
+        LONG successes;
+        LONG todo_failures;
+        LONG todo_successes;
+        LONG skipped;
+
+        BOOL overflow;
+        DWORD offset;
+        char debug[4096];
+    } output;
+};
+
+#define WINE_TEST_IOCTL(index) CTL_CODE(FILE_DEVICE_UNKNOWN, (index) + 0x800, METHOD_BUFFERED, FILE_ANY_ACCESS)
+
