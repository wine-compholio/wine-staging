diff --git a/include/bcrypt.h b/include/bcrypt.h
index 2555bf06b82..acf2f30e21c 100644
--- a/include/bcrypt.h
+++ b/include/bcrypt.h
@@ -90,7 +90,29 @@ typedef struct __BCRYPT_KEY_LENGTHS_STRUCT
