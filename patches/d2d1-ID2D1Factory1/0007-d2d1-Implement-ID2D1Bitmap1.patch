+        desc.pixelFormat.alphaMode = D2D1_ALPHA_MODE_PREMULTIPLIED;
+        desc.dpiX = 96.0f;
+        desc.dpiY = 96.0f;
+        desc.bitmapOptions = D2D1_BITMAP_OPTIONS_NONE;
+        desc.colorContext = NULL;
+    }
+    else
+    {
+        desc = *requested_properties;
+    }
+
