         else /* if ((filter & 0xf) == D3DX_FILTER_POINT) */
         {
@@ -1860,14 +1934,30 @@ HRESULT WINAPI D3DXLoadSurfaceFromMemory(IDirect3DSurface9 *dst_surface,
 
