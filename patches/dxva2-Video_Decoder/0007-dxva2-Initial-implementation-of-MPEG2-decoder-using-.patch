+    vaapi_lock();
+    refCount = InterlockedDecrement(&This->refCount);
+    if (!refCount)
+    {
+        assert(vaapi_videoservice == This);
+        vaapi_videoservice = NULL;
+    }
+    vaapi_unlock();
+
+    TRACE("(%p)->() Release from %d\n", This, refCount + 1);
+
+    if (!refCount)
+    {
+        TRACE("Destroying\n");
+
+        vaapi_lock();
+        pvaTerminate(This->va_display);
+        vaapi_unlock();
