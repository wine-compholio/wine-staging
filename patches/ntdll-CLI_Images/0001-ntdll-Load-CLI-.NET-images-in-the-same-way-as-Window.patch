+
+#ifdef __x86_64__
+    if (is_cli_only_image( peb->ImageBaseAddress ))
+        entry = (LPTHREAD_START_ROUTINE)p_CorExeMain;
+#endif
+
+    call_thread_entry_point( kernel_start, entry );
 }
 
