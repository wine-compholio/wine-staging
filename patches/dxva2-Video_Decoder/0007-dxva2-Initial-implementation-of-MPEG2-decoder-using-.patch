+    status = pvaGetImage(va_display, This->surfaces[This->currentSurface], 0, 0,
+                         This->width, This->height, This->vaImage.image_id);
+    if (status != VA_STATUS_SUCCESS)
+    {
+        ERR("failed to get image: %s (0x%x)\n", pvaErrorStr(status), status);
+        goto out;
